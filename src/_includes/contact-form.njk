<section class="py-12">
  <div class="w-full main-width mx-auto mb-8">
    <form name="contact" netlify>
        <div class="w-full mb-2">
          <input class="font-sans appearance-none block w-full py-3 px-4 text-gray-700 bg-white focus:bg-white rounded focus:outline-none" aria-label="name field" type="text" name="name" placeholder="Name">
        </div>
        <div class="w-full mb-2">
          <input class="font-sans appearance-none block w-full py-3 px-4 text-gray-700 bg-white focus:bg-white focus:border-gray-500 rounded focus:outline-none" aria-label="email field" type="email" name="email" placeholder="Email">
        </div>
      <div class="mb-4">
        <textarea class="font-sans appearance-none block w-full py-3 px-4 text-gray-700 bg-white focus:bg-white focus:border-gray-500 rounded focus:outline-none" aria-label="message field" type="text" name="message" placeholder="Write something..." rows="5"></textarea></div>
      <div>
        <button type="submit" class="inline-block w-full py-4 px-8 bg-yellow-300 hover:bg-primary font-sans rounded shadow">Submit</button>
      </div>
    </form>
  </div>
</section>